@using ViewModels = Liberty.POC.UI.Models
@model ViewModels.ClientDetailsModel
@{
    ViewBag.Title = "Process";
    Layout = "~/Views/Shared/_LayoutLiberty.cshtml";

}
<input type="hidden" value="@Model.Id" id="txtSessionId" />
<input type="hidden" value="@Model.Name" id="txtName" />
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Capture Details</h1>
        </div>
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Follow the Wizard
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-pills">
                        <li class="active">
                            <a href="#personal" id="personal-tab" data-toggle="tab" aria-expanded="true">Personal</a>
                        </li>
                        <li class="">
                            <a href="#address" id="address-tab" data-toggle="tab" aria-expanded="false">Address</a>
                        </li>
                        <li class="">
                            <a href="#contact" id="contact-tab" data-toggle="tab" aria-expanded="false">Contact</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="personal">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form">
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">=</span>
                                                <input type="text" class="form-control" id="txtFirstName" placeholder="First Name">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">=</span>
                                                <input type="text" class="form-control" id="txtSurname" placeholder="Surname">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">&</span>
                                                <input type="text" class="form-control" id="txtIdNumber" placeholder="ID No">
                                            </div>
                                            <div class="form-group">
                                                <label>No of Dependants</label>
                                                <select class="form-control" id="ddlNoDependants">
                                                    <option>1</option>
                                                    <option>2</option>
                                                    <option>3</option>
                                                    <option>4</option>
                                                    <option>5</option>
                                                    <option>6</option>
                                                    <option>7</option>
                                                    <option>8</option>
                                                    <option>9</option>
                                                    <option>10</option>
                                                    <option>12</option>
                                                    <option>13</option>
                                                    <option>14</option>
                                                    <option>15</option>
                                                    <option>16</option>
                                                    <option>17</option>
                                                    <option>18</option>
                                                    <option>19</option>
                                                    <option>20</option>
                                                </select>
                                            </div>
                                            <a href="#" class="btn btn-default" onclick="SaveAndContinue('address-tab');">Save and Continue</a>
                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                        </div>
                        <div class="tab-pane fade" id="address">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form">
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">#</span>
                                                <input type="text" class="form-control" id="txtStreet" placeholder="Street">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">^</span>
                                                <input type="text" class="form-control" id="txtSuburb" placeholder="Suburb">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">$</span>
                                                <input type="text" class="form-control" id="txtCity" placeholder="City">
                                            </div>
                                            <div class="form-group">
                                                <label>Province</label>
                                                <select class="form-control" id="ddlProvince">
                                                    <option>Gauteng</option>
                                                    <option>Freestate</option>
                                                    <option>Limpopo</option>
                                                    <option>Mpumalanga</option>
                                                    <option>North West</option>
                                                    <option>KwaZulu-Natal</option>
                                                </select>
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">0</span>
                                                <input type="text" class="form-control" id="txtCode" placeholder="Area Code">
                                            </div>
                                            <a href="#" class="btn btn-default" onclick="SaveAndContinue('contact-tab');">Save and Continue</a>
                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                        </div>
                        <div class="tab-pane fade" id="contact">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form role="form">
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">$</span>
                                                <input type="text" class="form-control" id="txtEmail" placeholder="Email">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">0</span>
                                                <input type="text" class="form-control" id="txtCellNo" placeholder="Cellphone">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">1</span>
                                                <input type="text" class="form-control" id="txtHomeNo" placeholder="Home">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">2</span>
                                                <input type="text" class="form-control" id="txtWorkNo" placeholder="Work">
                                            </div>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon">3</span>
                                                <input type="text" class="form-control" id="txtAltNo" placeholder="Alternative">
                                            </div>
                                            <a href="#" class="btn btn-default" onclick="Finish();">Finish</a>
                                        </form>
                                    </div>
                                </div>
                                <!-- /.row (nested) -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <div class="col-lg-3 col-md-9" id="support-tag">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-comments fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">Support</div>
                            <div>Click the link below and we will get someone to assist you&nbsp;<strong>RIGHT AWAY</strong>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer" id="divRequestHelp">
                        <span class="pull-left">Help me now</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>