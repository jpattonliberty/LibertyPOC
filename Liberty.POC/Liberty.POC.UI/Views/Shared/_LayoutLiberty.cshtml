<!DOCTYPE html>
<html lang="en">
<head>
    <title>Client - Liberty</title>
    <link href="~/Content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/liberty.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Home", new {clientName=@ViewBag.ClientName})">Liberty Client Log-on</a>
            </div>
            <ul class="nav navbar-top-links navbar-right">
                <li>
                    <h6 class="">
                       Welcome @ViewBag.ClientName
                    </h6>
                </li>
                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>
                    </a>
                </li>
                <li>
                    <a class="dropdown-toggle" href="@Url.Action("Login")">
                        <i class="fa fa-power-off fa-fw"></i>
                    </a>
                </li>
            </ul>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("Process", new {clientName=@ViewBag.ClientName})"><i class="fa fa-edit fa-fw"></i>Capture Details</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-bullseye fa-fw"></i>Saving Goals</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-beer fa-fw"></i>Holiday Check</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-certificate fa-fw"></i>Cashback</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-fire fa-fw"></i>Emergency</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-gamepad fa-fw"></i>Own your life</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-cube fa-fw"></i>Life Plan</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-female fa-fw"></i>Family</a>
                        </li>
                        <li>
                            <a href=""><i class="fa fa-flask fa-fw"></i>Risks</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="modal fade" id="basicModal" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" style="margin-top: 15%;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Confirm Session Handover</h4>
                    </div>
                    <div class="modal-body">
                        You are about to hand your current session over to the call center. Are you sure you wish to continue?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnBroadcastMessage">Continue</button>
                        <button type="button" class="btn btn-primary hide" id="btnOk">Ok</button>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/signalr")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/client")

</body>
</html>
